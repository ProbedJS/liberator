{
    "compilerOptions": {
        "sourceMap": true,
        "target": "es2018",
        "module": "ES6",
        "declaration": true,
        "outDir": "./dist",
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "strict": true,
        "lib": [
            "esnext"
        ],
        "newLine": "lf"
    },
    "include": [
        "src",
    ],
    "exclude": [
        "node_modules",
    ]
}